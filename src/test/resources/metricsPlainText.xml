<!--
aggregationType = AVERAGE | SUM | OBSERVATION
timeRollUpType = AVERAGE | SUM | CURRENT
clusterRollUpType = INDIVIDUAL | COLLECTIVE
-->
<!--
Set delta = true for metric to report per-min data
-->
<stats url="/api/3">
    <stat suburl="" name="plain-text">
        <metric attr="Active connections" alias="Active Connections" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
        <metric attr="Server|Accepts" alias="Accepts" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
        <metric attr="Server|Handled" alias="Handled" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
        <metric attr="Server|Requests" alias="Requests" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
        <metric attr="Reading" alias="Reading" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
        <metric attr="Writing" alias="Writing" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
        <metric attr="Waiting" alias="Waiting" aggregationType = "OBSERVATION" timeRollUpType = "AVERAGE" clusterRollUpType = "COLLECTIVE"/>
    </stat>
</stats>